<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/background_travel"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textPolicalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconImage"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/iconImage"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iconImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/cda" />

    <ScrollView
        android:id="@+id/scrollViewPromiseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iconImage"
        android:layout_below="@+id/textPolicalPromise"
        android:layout_marginTop="32dp" >

        <TextView
            android:id="@+id/textPolicalDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />
    </ScrollView>

    <TextView
        android:id="@+id/textPolicalPromise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollViewPromiseDescription"
        android:layout_below="@+id/iconImage"
        android:layout_marginTop="44dp"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text="Promises" />

    <TextView
        android:id="@+id/TextViewPolitical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPolicalName"
        android:layout_alignLeft="@+id/textPolicalName"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" 
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="right">


        <ImageButton
            android:id="@+id/imageButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_margin="5px"
            android:background="#ffffff"
            android:src="@drawable/plussymbol" />

        <ImageButton
            android:id="@+id/imageButtonEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
             android:layout_margin="5px"
            android:src="@drawable/equalsymbol" />
        
        
        <ImageButton
            android:id="@+id/imageButtonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_margin="5px"
            android:src="@drawable/minussymbol" />
    </LinearLayout>

</RelativeLayout>